<%- include("partials/header.ejs") -%>

<h1>Compose</h1>
<form action="/compose" method="post">
  <div class="form-group">
    <label for="inputsm">Title</label>
    <input class="form-control input-sm" id="inputsm" type="text" name="postTitle">
  </div>

  <div class="form-group">
    <label for="inputlg">Post</label>
    <textarea class="form-control" name="postContent" rows="5" cols="80"></textarea>
  </div>
  <button type="submit" class="btn btn-primary" name="button">Publish</button>
</form>

